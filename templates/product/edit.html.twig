{% extends "base.html.twig" %}
{% form_theme formView 'bootstrap_4_layout.html.twig' %}

{% block title%}
    Edition d'un produit
{% endblock %}

{% block body %}
    <h1>Edition du produit {{ product.name }}</h1>

    {{ form_start(formView, {"attr": {"novalidate":"novalidate"}})}}
    {{ form_errors(formView)}}

    <div class="row">
        <div class="col">
            {{ form_row(formView.name) }}
            {{ form_row(formView.price) }}
            {{ form_row(formView.stock) }}
        </div>


        <div class="col">
            {{ form_row(formView.Description) }}
            {{ form_row(formView.Picture) }}
        </div>
    </div>


    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i> Editer
    </button>
    {{ form_end(formView)}}
{% endblock %}
