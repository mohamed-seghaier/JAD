{% extends 'base.html.twig' %}

{% block title %}
Mes commandes
{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th>Numéro</th>
            <th>Adresse</th>
            <th>Date de commande</th>
            <th>Total</th>
        </tr>
        </thead>
        <tbody>
        {% for purchase in purchases %}
            <tr>
                <td>{{ purchase.id }}</td>
                <td>{{ purchase.address }}<br>{{ purchase.postalCode }}, {{ purchase.city }}</td>
                <td>{{ purchase.purchasedAt | date('d/m/y H:i') }}</td>
                <td>{{ purchase.total / 100  }} €</td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
{% endblock %}